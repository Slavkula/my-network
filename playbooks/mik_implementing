---
- name: Configure MikroTik routers
  hosts: mikrotik
  gather_facts: no
  vars:
    ansible_network_os: routeros
    ansible_connection: network_cli

  tasks:
    - name: Хостовые файлы
      include_vars: "host_vars/{{ inventory_hostname }}.yml"
        
    - name: Раздача имён
      routeros_command:
        commands:
          - "/system identity set name={{ hostname }}"

    - name: create interface bridge (loopback)
      routeros_command:
        commands:
          - /interface bridge add name Loopback1

    - name: Bridge address
      routeros_command:
        commands:
          - "/ip address add interface=Loopback1 address={{ Lo }}/32"
